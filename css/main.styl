blobSize = 30
.blob-circle
  box-sizing    border-box
  border        10px solid white
  circle        (blobSize)px
  position      absolute
  nw            -50%
  z-index       1
  display       none// !important

.blob-circle-wrap
  width   0px
  height  0px
  overflow hidden

.close
  position fixed
  circle 30*PX
  top  20%
  left -10%
  z-index -1
  // opacity 0
  transition opacity .25s ease-out
  display none
  &:hover
    cursor pointer
  &.is-show
    display block
    opacity 1
    left 75%
    z-index 10
