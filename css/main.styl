
PX = (1/16)rem
gs = 10*PX

rect()
  width  arguments
  height arguments
nw()
  top  arguments
  left arguments
circle()
  rect arguments
  border-radius 50%

easy-click()
  &:after
    content ''
    position absolute
    rect 200%
    z-index 1
    nw -50%

body
  background #28143f
  font-size 16px
  margin  0
  padding 0
  user-select none
  overflow hidden
  font-family Open Sans, sans-serif
  // &::-webkit-scrollbar
  //   overflow -moz-scrollbars-none !important
  //   display none !important
  //   -ms-overflow-style none !important
  //   width 0 !important
    
.badge
  position fixed
  nw 0
  z-index 10
  color white

.wrapper
  position    absolute
  z-index     1
  top         0
  bottom      0
  left        0
  right       0
  width       100%
  overflow    hidden
    
.particles
  perspective 500px
  perspective-origin 50% 50%
  overflow visible
  position relative
  user-select none
  
  position absolute
  z-index 1
  tap-highlight-color rgba(0,0,0,0)
  // width 2000px
  transform translateZ(0)
  user-select none
  text-size-adjust none
  // background #fff

particleSize = 150/2
{el = '.particle'}
  rect 2*particleSize*PX
  position absolute
  nw 0
  text-align center
  display block
  // overflow hidden
  line-height (2*particleSize)*PX
  &.is-open
    z-index 20
    {el}__inner
      transform scale(15) translateZ(-1000px)
    {el}__content
      display block
  &__inner
    circle 100%
    position absolute
    nw 0
  contentWidth  = 540
  contentHeight = 420
  &__content
    position absolute
    // border PX solid white
    // background #ccc
    // border PX solid white
    rect contentWidth*PX
    height contentHeight*PX
    display none
    nw 50%
    margin-left -(contentWidth/2)*PX
    margin-top -(contentHeight/2)*PX
    &.is-show
      display block

.project
  color white
  position relative
  rect 100%
  &__text, 
  &__img
    position absolute
    width 50%
    height 100%
  &__text
    left 57%
    margin-top 13.5*gs
    width 110%
  &__shadow-wrap
    transform-origin 100% center
  &__shadow
    position absolute
    width 300px
    height 50px
    opacity 0
    // background-color #555
    top 274px
    right 8px
    transform rotateX(80deg)
    border-radius 26px
    background linear-gradient(to right, rgba(58,8,57,0) 0%,rgba(58,8,57,0.65) 100%)
    transform-origin 100% center
    // box-shadow 0 0 150px #333

.project-text-line
  overflow        hidden
  line-height     1.5
  font-size       16px
  text-align      left
  letter-spacing  1px
  &--header
    font-size       22px
    font-weight     600
    margin-bottom   gs
    text-transform  uppercase
  &__inner
    opacity 0
// .center
//   background url('http://iconmelon.com/css/i/legomushroom.png') no-repeat center center !important
//   background-size 100% !important

.close
  position fixed
  circle 30*PX
  // background white
  top  20%
  left -10%
  z-index -1
  opacity 0
  transition opacity .25s ease-out
  &:hover
    cursor pointer
  &.is-show
    opacity 1
    left 75%
    z-index 10

@import './css-assets/img.styl'


