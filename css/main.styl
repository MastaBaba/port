

PX = (1/16)rem
gs = 10*PX

rect()
  width  arguments
  height arguments
nw()
  top  arguments
  left arguments
circle()
  rect arguments
  border-radius 50%

easy-click()
  &:after
    content ''
    position absolute
    rect 200%
    z-index 1
    nw -50%
    
body
  background #333
  font-size 16px
  margin  0
  padding 0
  rect 320*PX
  overflow hidden
  -webkit-user-select none  /* Chrome all / Safari all */
  -moz-user-select none     /* Firefox all */
  -ms-user-select none      /* IE 10+ */
  /* No support for these yet, use at own risk */
  -o-user-select none
  user-select none 
  &::-webkit-scrollbar
    overflow -moz-scrollbars-none !important
    display none !important
    -ms-overflow-style none !important
    width 0 !important
    
  // overflow hidden
    
.particles
  overflow visible
  // overflow hidden
  position relative
  -webkit-user-select none  /* Chrome all / Safari all */
  -moz-user-select none     /* Firefox all */
  -ms-user-select none      /* IE 10+ */
  /* No support for these yet, use at own risk */
  -o-user-select none
  user-select none 
  // transform translateZ(0)
  // backface-visibility hidden
  // background orange

particleSize = 150/2
.particle
  circle 2*particleSize*PX
  // border 2*PX solid deeppink
  // background deeppink
  position absolute
  nw 0
  // backface-visibility hidden
  // margin-left -(2*particleSize/2)*PX
  // margin-top -(2*particleSize/2)*PX

.center
  circle 2*particleSize*PX
  position absolute
  nw 50%
  margin-left -((2*particleSize)/2)*PX
  margin-top -((2*particleSize)/2)*PX
  background url('http://iconmelon.com/css/i/legomushroom.png') no-repeat center center
  background-size 100%
  border PX solid deeppink
  
