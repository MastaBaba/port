
PX = (1/16)rem
gs = 10*PX

rect()
  width  arguments
  height arguments
nw()
  top  arguments
  left arguments
circle()
  rect arguments
  border-radius 50%

easy-click()
  &:after
    content ''
    position absolute
    rect 200%
    z-index 1
    nw -50%

body
  background #28143f
  font-size 16px
  margin  0
  padding 0
  user-select none
  overflow hidden
  font-family Open Sans, sans-serif
