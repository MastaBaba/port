
PX = (1/16)rem
gs = 10*PX

rect()
  width  arguments
  height arguments
nw()
  top  arguments
  left arguments
circle()
  rect arguments
  border-radius 50%

easy-click()
  &:after
    content ''
    position absolute
    rect 200%
    z-index 1
    nw -50%
    
body
  background #28143f
  font-size 16px
  margin  0
  padding 0
  // rect 320*PX
  // overflow hidden
  -webkit-user-select none  /* Chrome all / Safari all */
  -moz-user-select none     /* Firefox all */
  -ms-user-select none      /* IE 10+ */
  -o-user-select none
  user-select none 
  &::-webkit-scrollbar
    overflow -moz-scrollbars-none !important
    display none !important
    -ms-overflow-style none !important
    width 0 !important
    
.badge
  position fixed
  nw 0
  z-index 10
  color white
  
.particles
  perspective 500px
  perspective-origin 50% 50%
  overflow visible
  position relative
  user-select none
  svg
    rect 0

particleSize = 150/2
.particle
  rect 2*particleSize*PX
  position absolute
  nw 0
  text-align center
  display block
  line-height (2*particleSize)*PX
  &__inner
    circle 100%
    position absolute
    nw 0
  contentWidth = 480
  contentHeight = 320
  &__content
    position absolute
    background #ccc
    circle contentWidth*PX
    // height contentHeight*PX
    display none
    nw 50%
    margin-left -(contentWidth/2)*PX
    margin-top -(contentHeight/2)*PX

.center
  background url('http://iconmelon.com/css/i/legomushroom.png') no-repeat center center !important
  background-size 100% !important


.close
  position fixed
  circle 30*PX
  background white
  top  25%
  left -10%
  z-index -1
  opacity 0
  transition opacity .25s ease-out
  &:hover
    cursor pointer
  &.is-show
    opacity 1
    left 75%
    z-index 10



