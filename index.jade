doctype
html
  head
    meta(charset='UTF-8')
    title port
    link(rel="stylesheet", type="text/css", href="css/main.css")
    meta(name="viewport", content="width=320px, height=320px, initial-scale=1,   user-scalable=no")
  
  - var colors = ['#FC2D79', '#FC2D79',  '#11CDC5', '#FCB635', '#f1f1f1', '#4A90E2']
  - var size = 150, gap = 15;
  - var columnSize = 25;
  body
    .badge#js-badge
    .particles#js-particles(style="width:#{(size+gap)*(columnSize) - size/2 - 2*gap}px; height:#{(size)*(columnSize)-size-2*gap}px")
      //- .center
      - for (var j=0; j < columnSize; j++)
        - for (var i=0; i < columnSize-1; i++)
          - var color = colors[Math.round((colors.length-1)*Math.random())]
          - var shift = (j % 2) ? -(size+gap)/2: 0;
          - var left = i*(size+gap)-shift;
          - var top  = j*(size-gap/2);
          - var middle = ~~(columnSize/2)
          - var className = (j === middle && i === middle) ? 'center': '';
          svg(style="overflow: visible")
            foreignObject
              a(href="#").particle( class="#{className}", id="js-particle-#{i}",
                         data-left="#{left}", data-top="#{top}"
                         style="left: #{left}px; top: #{top}px" )
                .particle__inner(style="background: #{color}")


    script(src="dist/app.js")
