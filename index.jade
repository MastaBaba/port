doctype
html
  head
    meta(charset='UTF-8')
    title port
    link(rel="stylesheet", type="text/css", href="css/main.css")
    meta(name="viewport", content="width=320px, height=320px, initial-scale=1,   user-scalable=no")

  mixin img()
    .image
      .scene
        .shape.cuboid-1.cub-1
          .face.ft
            .photon-shader
          .face.bk
            .photon-shader
          .face.rt
            .photon-shader
          .face.lt
            .photon-shader
          .face.bm
            .photon-shader
          .face.tp
            .photon-shader
          .cr.cr-0
            .face.side.s0
              .photon-shader  
            .face.side.s1
              .photon-shader
            .face.side.s2
              .photon-shader
          .cr.cr-1
            .face.side.s0
              .photon-shader
            .face.side.s1
              .photon-shader
            .face.side.s2
              .photon-shader
          .cr.cr-2
            .face.side.s0
              .photon-shader
            .face.side.s1
              .photon-shader
            .face.side.s2
              .photon-shader
          .cr.cr-3
            .face.side.s0
              .photon-shader
            .face.side.s1
              .photon-shader
            .face.side.s2
              .photon-shader

  
  - var colors = ['#FC2D79', '#FC2D79',  '#11CDC5', '#FCB635', '#f1f1f1', '#4A90E2']
  - var size = 150, gap = 25;
  - var columnCnt = 25;
  body
    .close#js-close-btn
    .content#js-content
    .badge#js-badge
    .wrapper#js-wrapper
      .particles#scroller(style="margin-left: #{-(size+gap)*1}px; margin-top: #{-(size+gap)*1}px; width:#{(size+gap)*(columnCnt-2.2) - size/2 - 2*gap}px; height:#{(size)*(columnCnt-4.5)-size-2*gap}px")
          .blob-circle#js-blob-circle
            //- .blob-circle__inner#js-blob-circle-inner
          //- .center
          - for (var j=0; j < columnCnt; j++)
            - for (var i=0; i < columnCnt-1; i++)
              - var color = colors[Math.round((colors.length-1)*Math.random())]
              - var shift = (j % 2) ? -(size+gap)/2: 0;
              - var left = i*(size+gap)-shift;
              - var top  = j*(size-gap/2);
              - var middle = ~~(columnCnt/2)
              - var className = (j === middle && i === middle) ? 'is-open1': '';
              //- - var className = (j === (middle-5) && i ===( middle-5)) ? 'is-open': '';
              .particle( class="#{className}", id="js-particle-#{i}",
                             data-left="#{left}", data-top="#{top}"
                             style="left: #{left}px; top: #{top}px" )
                .particle__inner(style="background: #{color}")
                .particle__content
                  .project
                    .project__img
                      .project__shadow-wrap#js-shadow-wrap
                        .project__shadow#js-shadow
                      +img()
                    .project__text#js-text
                      h2 Some project
                      p It if sometimes furnished unwilling as additions so. Blessing resolved peculiar fat graceful ham. Sussex on at really ladies in as elinor.




    script(src="dist/app.js")
